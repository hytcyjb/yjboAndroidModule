<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_public_common" />

    <TextView
        android:id="@+id/show_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/waterripple_qianhui_bg"
        android:text="显示对话框"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/show_otheractivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/waterripple_qianhui_bg"
        android:text="打开另一个页面"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/show_dialog_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/show_otheractivity"
        android:layout_alignRight="@+id/show_otheractivity"
        android:layout_below="@+id/show_otheractivity"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/waterripple_qianhui_bg"
        android:text="显示对话框Activity"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/show_content_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示内容，说明"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
